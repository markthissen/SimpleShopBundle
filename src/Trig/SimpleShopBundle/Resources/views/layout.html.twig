{% extends '::base.html.twig' %}
{% block title %}SimpleShop{% endblock %}
{% block head %}
{{ parent() }}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
<!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
{% block stylesheets %}
<link href="{{ asset('bundles/trigsimpleshop/css/bootstrap.min.css')}}" rel="stylesheet">
<link href="{{ asset('bundles/trigsimpleshop/css/main.css')}}" rel="stylesheet">
{% endblock %}
{% endblock %}
{% block body %}
<div class="container">
    <div class="navbar navbar-inverse navbar-static">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('homepage') }}">SimpleShop</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="{{ path('vendors')}}">Vendors</a></li>
                        <li><a href="{{ path('cars')}}">Cars</a></li>
                    </ul>
                        {% block login %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        {% block content %}
        {% endblock %}
        </div>
        <hr>
        <footer>
            <p class="">Trig's SimpleShop</p>
            <p><strong>powered by</strong>: <a href="http://twitter.github.com/bootstrap">twitter bootstrap</a>, <a href="http://symfony.com">Symfony2</a>, <a href="http://www.doctrine-project.org/">Doctrine2</a></p>
            <p> basically all text content is from <a href="http://www.en.wikipedia.org">en.wikipedia.org</a></p>
        </footer>
{% block javascripts  %}
        <script type="text/javascript" src="{{ asset('bundles/trigsimpleshop/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/trigsimpleshop/js/bootstrap.min.js') }}"></script>
{% endblock %}
    </div>
</body>
{% endblock %}
